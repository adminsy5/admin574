<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarViewDemo">

    <TextView
        android:id="@+id/TextHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DatePicker Demo 1"
        android:fontFamily="@font/exo_2"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#B55757"
        android:textSize="22sp"
        android:textStyle="bold">
    </TextView>

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextHeader"
        android:id="@+id/DatePickerDemo1">
    </DatePicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/DatePickerDemo1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your date : "
        android:paddingLeft="12dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:id="@+id/newDateText">
   </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/newDateText"
            android:id="@+id/newDateGet"
            android:inputType="date">
        </EditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingBottom="38dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click â¤"
        android:id="@+id/btnClick"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:layout_alignParentBottom="true">
    </Button>
    </RelativeLayout>
</RelativeLayout>